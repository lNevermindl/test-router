body
    margin: 0
    font-family: 'Rubik', sans-serif;
    font-size: 14px
    background-color: #ade

.preloader
    display: block
    width: 50px
    height: 50px
    margin: 25% auto

.tabs
    max-width: 1000px
    margin: 0 auto
    padding: 15px

.tabs__nav
    margin-right: 10px

.tabs__nav-list
    display: flex
    margin: 0
    padding: 0
    list-style-type: none

.tabs__nav-item
    border-top-left-radius: 5px
    border-top-right-radius: 5px
    box-shadow: 0px 5px 15px 0px #399696
    overflow: hidden

    & + &
        margin-left: 2px

.tabs__nav-link
    display: block
    padding: 10px 15px
    color: #326496
    background-color: #d5efef
    text-decoration: none

.tabs__nav-link_active
    font-weight: bold
    background-color: #fff

    &:after
        content: ''
        display: block
        height: 2px
        background-color: #399696

.tabs__content
    min-height: 50vh
    border-radius: 5px
    border-top-left-radius: 0
    padding: 15px
    background-color: #fff
    box-shadow: 0px 5px 15px 0px #399696
    transform: translateZ(1px)

